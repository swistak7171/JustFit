<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="equipment"
            type="pl.kamilszustak.justfit.domain.model.equipment.Equipment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/default_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            android:text="@{equipment.name}"
            tools:text="Hantel 10kg"
            android:textStyle="bold"
            android:textAppearance="?textAppearanceBody1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/specificationTextView"
            android:text="@{equipment.specification}"
            tools:text="Do ćwiczeń ramion"
            android:textAppearance="?textAppearanceOverline" />
    </LinearLayout>
</layout>