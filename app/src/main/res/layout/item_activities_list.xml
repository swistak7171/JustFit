<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/default_padding"
    app:cardUseCompatPadding="true"
    tools:cardUseCompatPadding="false"
    app:cardCornerRadius="@dimen/default_half_radius"
    app:cardElevation="@dimen/default_half_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            tools:text="Bieganie w tę i nazad"
            android:textAppearance="?textAppearanceHeadline6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typeTextView"
            tools:text="Sztuki walki"
            android:textAppearance="?textAppearanceOverline"
            app:layout_constraintTop_toBottomOf="@id/nameTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leaderNameTextView"
            tools:text="Prowadzący: Jan Kowalski"
            android:textAppearance="?textAppearanceBody2"
            app:layout_constraintTop_toBottomOf="@id/typeTextView" />

        <View
            android:id="@+id/divider"
            style="@style/Divider"
            app:layout_constraintTop_toBottomOf="@id/leaderNameTextView"
            android:layout_marginTop="@dimen/default_half_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView"
            tools:text="2020-10-25"
            android:textAppearance="?textAppearanceBody1"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:layout_marginTop="@dimen/default_half_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeTextView"
            tools:text="11:00 - 12:00"
            android:textAppearance="?textAppearanceBody2"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/dateTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>